{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Focust",
  "version": "0.2.5",
  "identifier": "com.fesmoph.focust",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "createUpdaterArtifacts": true,
    "copyright": "MIT License",
    "targets": ["appimage", "nsis", "dmg", "app"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": ["assets/sounds/*"]
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/pilgrimlyieu/Focust/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEM3NTQ5QjZCQTczRjFGM0EKUldRNkh6K25hNXRVeDIvY09lMCthbEthaXdGNzJuZllEQ3FBQVBLNFB2WTV1eXZmbkRuM01nYVcK"
    }
  }
}
