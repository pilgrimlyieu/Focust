{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Focust",
  "version": "0.1.0",
  "identifier": "com.fesmoph.focust",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "copyright": "MIT License",
    "targets": ["appimage", "msi", "dmg"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "assets/sounds/*",
      "resources/suggestions.toml"
    ]
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/pilgrimlyieu/Focust/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDc2OTc2M0FCMDM1RTQ5N0MKUldSOFNWNERxMk9YZHU2Sm1CNzVVYmp5bjE5aENkZjRuQjFkd2p2cjd1bVJqVmx4UHpWMlE4RkEK"
    }
  }
}
